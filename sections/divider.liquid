{%- style -%}
  @media screen and (max-width: 749px) {
    #shopify-section-{{ section.id }} {
      margin-bottom: {{ section.settings.margin_mobile }}px;
    }
  }
  @media screen and (min-width: 750px) {
    #shopify-section-{{ section.id }} {
      margin-bottom: {{ section.settings.margin_desktop }}px;
    }
  }
{%- endstyle -%}

{% schema %}
{
  "name": "t:sections.divider.name",
  "tag": "section",
  "class": "section-divider",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.divider.settings.header.content"
    },
    {
      "type": "paragraph",
      "content": "t:sections.divider.settings.paragraph.content"
    },
    {
      "type": "range",
      "id": "margin_desktop",
      "min": -160,
      "max": 160,
      "step": 5,
      "unit": "px",
      "label": "t:sections.divider.settings.margin.desktop.label",
      "default": 80
    },
    {
      "type": "range",
      "id": "margin_mobile",
      "min": -80,
      "max": 80,
      "step": 5,
      "unit": "px",
      "label": "t:sections.divider.settings.margin.mobile.label",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "t:sections.divider.presets.name"
    }
  ]
}
{% endschema %}

