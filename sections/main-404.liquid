<style type="text/css">
  .page-template__404 > legend {
    margin: 15px 0 20px 0;
    font-size: 18px;
  }
  .page-template__404 > legend+a {
    margin: 0 auto;
  }
  .template-404 .heading {
    display: flex;
    align-items: center;
    gap: 10px;
    justify-content: center;
  }
  .page-template__404 .heading>svg {
    height: 30px;
    width: 30px;
  }
  .page-template__404 {
    padding: 40px;
    border-radius: var(--border-radius-xlg);
    border: var(--solid-border);
  }
  @media screen and (min-width: 750px){
    .template-404 .heading>svg {
      height: 40px;
      width: 40px;
    }
  }
</style>

<div class="template-404 page-width page-margin center">
  <div class="page-template__404 color-secondary">
    <h1 class="h2 heading">{% render 'theme-icons', icon: 'warning' %}{{ 'templates.404.title' | t }}</h1>
    <legend class="bold special--base">{{ 'templates.404.subtext' | t }}</legend>
    <a href="{{ routes.all_products_collection_url }}" class="btn btn--primary">
      {{ 'general.continue_shopping' | t }} {% render 'theme-icons', icon: 'arrow-up-right' %}
    </a>
  </div>
</div>
