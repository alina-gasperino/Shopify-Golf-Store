{{ 'countdown-timer.css' | asset_url | stylesheet_tag }}
<div class="{% unless section.settings.full_width %} page-width{% endunless %}">
  <div class="section__countdown-timer color-{{ section.settings.color_scheme }}{% if section.settings.reduce_margins %} reduce__margin{% endif %}">
    {% for block in section.blocks %}
      {% if block.type == 'timer' %}
        <div class="countdown__block countdown__block-type-{{ block.type }}" {{ block.shopify_attributes }}>
          <{% if block.settings.enable_timer %}countdown-timer{% else %}div{% endif %}
            data-year="{{ block.settings.year }}"
            data-month="{{ block.settings.month }}"
            data-day="{{ block.settings.day }}"
            data-hour="{{ block.settings.hour }}"
            data-minute="{{ block.settings.minute }}"
            data-hide-timer="{{ block.settings.hide_timer }}"
            data-complete-message="{{ block.settings.text }}"
          >
            <div class="countdown__timer countdown__timer--visible">
              <div class="countdown__timer-block">
                <h2 class="h4 timer__days color-{% if section.settings.color_scheme != 'primary' %}primary{% else %}secondary{% endif %}">{{ 'sections.countdown_timer.default' | t }}</h2>
                <legend class="special--small">{{ 'sections.countdown_timer.days' | t }}</legend>
              </div>
              <div class="countdown__timer-block">
                <h2 class="h4 timer__hours color-{% if section.settings.color_scheme != 'primary' %}primary{% else %}secondary{% endif %}">{{ 'sections.countdown_timer.default' | t }}</h2>
                <legend class="special--small">{{ 'sections.countdown_timer.hours' | t }}</legend>
              </div>
              <div class="countdown__timer-block">
                <h2 class="h4 timer__minutes color-{% if section.settings.color_scheme != 'primary' %}primary{% else %}secondary{% endif %}">{{ 'sections.countdown_timer.default' | t }}</h2>
                <legend class="special--small">{{ 'sections.countdown_timer.minutes' | t }}</legend>
              </div>
              <div class="countdown__timer-block">
                <h2 class="h4 timer__seconds color-{% if section.settings.color_scheme != 'primary' %}primary{% else %}secondary{% endif %}">{{ 'sections.countdown_timer.default' | t }}</h2>
                <legend class="special--small">{{ 'sections.countdown_timer.seconds' | t }}</legend>
              </div>
            </div>
            {% if block.settings.text != blank %}
              <legend class="countdown__timer-message timer__message center theme--success-message special--base hide">{% render 'theme-icons', icon: 'check' %}{{ block.settings.text }}</legend>
            {% endif %}
          </{% if block.settings.enable_timer %}countdown-timer{% else %}div{% endif %}>
        </div>
      {% endif %}
      {% if block.type == 'content' %}
        <div class="countdown__block countdown__block-type-{{ block.type }}" {{ block.shopify_attributes }}>
          <div class="countdown__text-wrapper">
            <div class="countdown__heading">
              <h2 class="{{ block.settings.heading_size }}">{{ block.settings.heading }}</h2>
            </div>
            <div class="countdown__richtext">
              {{ block.settings.text }}
            </div>
          </div>
        </div>
      {% endif %}
      {% if block.type == 'button' %}
        <div class="countdown__block countdown__block-type-{{ block.type }}" {{ block.shopify_attributes }}>
          <a
            class="countdown__button btn btn--{{ block.settings.button_style }}"
            {% if block.settings.button_link != blank %}
            href="{{ block.settings.button_link }}"
            {% endif %}
          >
            {{ block.settings.button }} {% render 'theme-icons', icon: 'arrow-up-right' %}
          </a>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>
<script src="{{ 'countdown-timer.js' | asset_url }}" defer></script>
