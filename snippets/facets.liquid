  {% comment %}
    Renders facets (filtering and sorting)
  
    Accepts:
    - results: {Object} Collection or Search object
    - enable_filtering: {Boolean} Show filtering when true
    - enable_sorting: {Boolean} Show sorting when true
    - filter_type: {String} Type of filter
  
    Usage:
    {% render 'facets', results: collection, enable_filtering: true, enable_sorting: true, filter_type: 'vertical' %}
  {% endcomment %}
  
  {{ 'component-show-more.css' | asset_url | stylesheet_tag }}
  
  {%- liquid
    assign sort_by = results.sort_by | default: results.default_sort_by
    assign total_active_values = 0
    if results.url
      assign results_url = results.url
    else
      assign terms = results.terms | escape
      assign results_url = '?q=' | append: terms | append: '&options%5Bprefix%5D=last&sort_by=' | append: sort_by
    endif
    assign activeFilter = false
    for filter in results.filters
     if filter.active_values.size > 0
       assign activeFilter = true
     endif
    endfor
  -%}
  
  <div class="facets-container{% if filter_type == 'popup' %} facets-container-drawer{% endif %}">
    {%- if filter_type == 'vertical' or filter_type == 'horizontal' -%}
      <facet-filters-form class="facets small-hide">
        <form
          id="FacetFiltersForm"
          class="{% if filter_type == 'horizontal' %}facets__form{% else %}facets__form-vertical color-secondary{% endif %}"
        >
          {%- if results.terms -%}
            <input type="hidden" name="q" value="{{ results.terms | escape }}">
            <input name="options[prefix]" type="hidden" value="last">
          {%- endif -%}
  
          {% if enable_filtering or enable_sorting %}
            <div class="FacetsHeadWrapper">
              {%- if filter_type == 'horizontal' -%}
                {% comment %} Sorting and product count are the last elements when filter type is horizontal {% endcomment %}
                  <div class="facet--button-result">
                    {% if enable_filtering %}                    
                      <button type="button" class="toggle--facetFilter active">
                        {% render 'theme-icons', icon: 'filter-slider' %}
                        <span class="bold">{{ 'products.facets.filter_button' | t }}</span>
                      </button>
                    {% endif %}
                    {%- if enable_sorting -%}
                      <div class="product-count" role="status">
                        <p class="product-count__text">
                          <span id="ProductCountDesktop">
                            {%- if results.results_count -%}
                              {{ 'templates.search.results_with_count' | t: terms: results.terms, count: results.results_count }}
                            {%- elsif results.products_count == results.all_products_count -%}
                              {{ 'products.facets.product_count_simple' | t: count: results.products_count }}
                            {%- else -%}
                              {{ 'products.facets.product_count' | t: product_count: results.products_count, count: results.all_products_count }}
                            {%- endif -%}
                          </span>
                        </p>
                        <div class="loading-overlay__spinner">
                          {% render 'theme-icons', icon: 'loader' %}
                        </div>
                      </div>
                    {% endif %}
                  </div>
                {%- if enable_sorting -%}
                  <div class="facet-filters sorting caption">
                    <div class="facet-filters__field">
                      <p class="facet-filters__label bold">
                        <label for="SortBy">{{ 'products.facets.sort_by_label' | t }}</label>
                      </p>
                      <div class="filter--select">
                        {%- assign sort_by = results.sort_by | default: results.default_sort_by -%}
                        <select
                          name="sort_by"
                          class="option--select" 
                          id="SortBy"
                          aria-describedby="a11y-refresh-page-message"
                        >
                          {%- for option in results.sort_options -%}
                            <option
                              value="{{ option.value | escape }}"
                              {% if option.value == sort_by %}
                                selected="selected"
                              {% endif %}
                            >
                              {{ option.name | escape }}
                            </option>
                          {%- endfor -%}
                        </select>
                        {% render 'theme-icons', icon: 'chevron-down' %}
                      </div>
                    </div>
                    <noscript>
                      <button type="submit" class="facets__button-no-js button button--secondary">
                        {{ 'products.facets.sort_button' | t }}
                      </button>
                    </noscript>
                  </div>
                {% endif %}
              {%- endif -%}
            </div>
            {% comment %} Heading is the first tabbable element on filter type horizontal {% endcomment %}
  		  {% if enable_filtering %}
            {% if filter_type == 'horizontal' %}
              <div class="facets__wrapper-horzontal">
            {% endif %}
            <div
              id="FacetsWrapperDesktop"
              {% if filter_type == 'horizontal' %}
                class="facets__wrapper"
              {% endif %}
            >
              <script src="{{ 'show-more.js' | asset_url }}" defer="defer"></script>
              {% comment %} Filters for both horizontal and vertical filter {% endcomment %}
              {%- for filter in results.filters -%}
                {% liquid
                  assign checkColorFilter = false 
                  assign filterLabel = filter.label | downcase
                  if filterLabel == 'color' or filterLabel == 'colour'
                    assign checkColorFilter = true
                  endif
                 assign total_active_values = total_active_values | plus: filter.active_values.size

                assign presentation = filter.presentation | default: 'text'
                    if presentation == 'image'
                      assign visual_layout_class = 'facets-layout facets-layout-grid facets-layout-grid--' | append: presentation
                    else
                      assign visual_layout_class = 'facets-layout facets-layout-list facets-layout-list--' | append: presentation
                    endif
              %}
                {% case filter.type %}
                  {% when 'boolean', 'list' %}
                    <details
                      id="Details-{{ forloop.index }}-{{ section.id }}"
                      class="{% if filter_type == 'horizontal' %}disclosure-has-popup facets__disclosure{% else %}facets__disclosure-vertical color-gray{% endif %} js-filter"
                      data-index="{{ forloop.index }}"
                      {% if filter_type == 'vertical' and forloop.index == 1 %}
                        open
                      {% endif %}
                    >
                      <summary
                        class="facets__summary bold caption-large focus-offset{% if filter.param_name == 'filter.v.availability' %} filter__availability{% endif %}"
                        aria-label="{{ filter.label }} ({{ 'products.facets.filters_selected.one' | t: count: filter.active_values.size }})"
                      >
                        {%- unless filter.param_name == 'filter.v.availability' -%}
                          <div>
                            <span>
                              {{- filter.label | escape }}
                            </span>
                            {% render 'theme-icons', icon: 'plus' %}
                            {% render 'theme-icons', icon: 'minus' %}
                          </div>
                        {% else %}
                          {%- for value in filter.values -%}
                            {% assign valueLabel = value.label | handle %}
                            <div class="filter-availability-item{% if value.count == 0 and value.active == false %} availablity-disabled{% endif %}">
                              <span>{% if valueLabel == 'in-stock' %}{{- 'products.facets.availability_label' | t -}}{% else %}{{ value.label | escape }}{% endif %}</span>
                              <label
                                for="Filter-{{ filter.param_name | escape }}-{{ forloop.index }}"
                                class="facet-checkbox availability"
                              >
                                <input 
                                  type="checkbox"
                                  name="{{ filter.param_name }}"
                                  value="{{ value.value }}"
                                  id="Filter-{{ filter.param_name | escape }}-{{ forloop.index }}"
                                  {% if value.active %}
                                    checked
                                  {% endif %}
                                  {% if value.count == 0 and value.active == false %}
                                    disabled
                                  {% endif %}
                                >
                                {% render 'theme-icons', icon: 'check' %}
                              </label>
                            </div>
                          {% endfor %}
                        {% endunless %}
                      </summary>
                      <div
                        id="Facet-{{ forloop.index }}-{{ section.id }}"
                        class="parent-display {% if filter_type == 'horizontal' %}facets__display{% else %}facets__display-vertical{% endif %}">
                      {%- unless filter.param_name == 'filter.v.availability' -%}
                      <div class="filter--inner-display scrollbar {%- if filter_type != 'vertical' -%}color-secondary{% endif %}">
  						  {%- if filter_type != 'vertical' -%}
                              <div class="tooltip--icon">
      						  {% render 'theme-icons', icon: 'tooltip' %}
      						</div>
                          {% endif %}
  						  <fieldset class="facets-wrap parent-wrap {% if filter_type == 'vertical' %} facets-wrap-vertical{% endif %}{% if presentation == 'swatch' or color_swatch and checkColorFilter %} filter--color-swatch{% endif %}">
  							<legend class="visually-hidden">{{ filter.label | escape }}</legend>
  							<ul
  							  class="{% if filter_type != 'vertical' %} facets__list{% endif %} list-unstyled no-js-hidden {% if presentation != 'image' %}option_metadata{% endif %}"
  							  role="list"
  							>
  							  {%- for value in filter.values -%}
  								<li class="list-menu__item facets__item{% if forloop.index > 10 and filter_type == 'vertical' %} show-more-item hidden{% endif %}">
                                  
  								  {% if presentation == 'swatch' or color_swatch and checkColorFilter %}
                                      {% liquid
                                        assign colorHexCode = ''
                                        assign colorValueDowncase = value.value | handleize
                                        assign swatchConfig = settings.custom_color_swatch | newline_to_br | split: '<br />'
                                        for colorItem in swatchConfig
                                          assign splitItem = colorItem | split: ':'
                                          assign colorName = splitItem.first | handleize
                                          if colorValueDowncase == colorName
                                            assign colorValue = splitItem.last | strip
                                            if colorValue contains '#'
                                              assign colorHexCode = colorValue
                                            endif
                                            break
                                          endif
                                        endfor
                                        assign color_file_name = value.value | handle | append: '.png'
                                        assign color_image = color_file_name | file_img_url: '50x50' | prepend: 'https:' | split: '?' | first
                                       
                                        assign swatch_image = ''
                                        assign swatch_color = ''
                                        
                                        if value.swatch.image
                                          assign image_url = value.swatch.image | image_url: width: 50
                                          assign swatch_image = 'url(' | append: image_url | append: ')'
                                        endif
                                        if value.swatch.color
                                          assign swatch_color = 'rgb(' | append: value.swatch.color.rgb | append: ')'
                                        endif
                                        
                                      -%}
                                   
                                      <input type="checkbox" name="{{ value.param_name }}" value="{{ value.value }}" id="Filter-{{ filter.param_name | escape }}-{{ forloop.index }}"{% if value.active %} checked{% endif %}{% if value.count == 0 and value.active == false %} disabled{% endif %}>
                                      <label for="Filter-{{ filter.param_name | escape }}-{{ forloop.index }}" title="{{ value.value }}" class="facet-checkbox color__swatches{% if value.count == 0 and value.active == false %} facet-checkbox--disabled{% endif %}"
                                        style="background-color:{% if colorHexCode != '' %}{{ colorHexCode }}{% elsif swatch_color != '' %}{{ swatch_color }}{% else %}{{ colorValueDowncase | downcase }}{% endif %}; background-image:{% if swatch_image != blank %}{{ swatch_image }}{% elsif images[color_file_name] != blank %}url({{ color_image }});{% endif %}">
                                        <span class="hide" aria-hidden="true">{{ value.label | escape }} ({{ value.count }})</span>
                                      </label>
                                    {% else %}
                                    
                                    <label
  									for="Filter-{{ filter.param_name | escape }}-{{ forloop.index }}"
  									class="facet-checkbox{% if value.count == 0 and value.active == false %} facet-checkbox--disabled{% endif %}"
  								  >
  									<input
  									  type="checkbox"
  									  name="{{ value.param_name }}"
  									  value="{{ value.value }}"
  									  id="Filter-{{ filter.param_name | escape }}-{{ forloop.index }}"
  									  {% if value.active %}
  										checked
  									  {% endif %}
  									  {% if value.count == 0 and value.active == false %}
  										disabled
  									  {% endif %}
  									>
                                    {% if presentation == 'image' %}
                                      <div class="facets__visual-display-wrapper">
                                        {% render 'visual-display',
                                          type: value.display.type,
                                          value: value.display.value,
                                          presentation: filter.presentation
                                        %}
                                      </div>
                                    {% endif %}
                                    {% render 'theme-icons', icon: 'check' %}
                                      <span aria-hidden="true">{{ value.label | escape }} ({{ value.count }})</span>
                                      <span class="visually-hidden">
                                        {{- value.label | escape }} (
                                        {%- if value.count == 1 -%}
                                          {{- 'products.facets.product_count_simple.one' | t: count: value.count -}}
                                        {%- else -%}
                                          {{- 'products.facets.product_count_simple.other' | t: count: value.count -}}
                                        {%- endif -%}
                                        )</span>
      								</label>
                                    {% endif %}
  								</li>
  							  {%- endfor -%}
  							</ul>
  							{% comment %} No show more for no JS {% endcomment %}
  							<ul 
  							  class="{% if filter_type != 'vertical' %} facets__list{% endif %} no-js-list list-unstyled no-js"
  							  role="list"
  							>
  							  {%- for value in filter.values -%}
  								<li class="list-menu__item facets__item"> 
  								  <label
  									for="Filter-{{ filter.param_name | escape }}-{{ forloop.index }}-no-js"
  									class="facet-checkbox{% if value.count == 0 and value.active == false %} facet-checkbox--disabled{% endif %}"
  								  >
  									<input
  									  type="checkbox"
  									  name="{{ value.param_name }}"
  									  value="{{ value.value }}"
  									  id="Filter-{{ filter.param_name | escape }}-{{ forloop.index }}-no-js"
  									  {% if value.active %}
  										checked
  									  {% endif %}
  									  {% if value.count == 0 and value.active == false %}
  										disabled
  									  {% endif %}
  									>
  
  									<svg
  									  width="1.6rem"
  									  height="1.6rem"
  									  viewBox="0 0 16 16"
  									  aria-hidden="true"
  									  focusable="false"
  									>
  									  <rect width="16" height="16" stroke="currentColor" fill="none" stroke-width="1"></rect>
  									</svg>
  
  									<svg
  									  aria-hidden="true"
  									  class="icon icon-checkmark"
  									  width="1.1rem"
  									  height="0.7rem"
  									  viewBox="0 0 11 7"
  									  fill="none"
  									  xmlns="http://www.w3.org/2000/svg"
  									>
  									  <path d="M1.5 3.5L2.83333 4.75L4.16667 6L9.5 1"
  										stroke="currentColor"
  										stroke-width="1.75"
  										stroke-linecap="round"
  										stroke-linejoin="round" />
  									</svg>
  
  									<span aria-hidden="true">{{ value.label | escape }} ({{ value.count }})</span>
  									<span class="visually-hidden">
  									  {{- value.label | escape }} (
  									  {%- if value.count == 1 -%}
  										{{- 'products.facets.product_count_simple.one' | t: count: value.count -}}
  									  {%- else -%}
  										{{- 'products.facets.product_count_simple.other' | t: count: value.count -}}
  									  {%- endif -%}
  									  )</span
  									>
  								  </label>
  								</li>
  							  {%- endfor -%}
  							</ul>
  						  </fieldset>
  						  {%- if filter.values.size > 10 and filter_type == 'vertical' -%}
  							<show-more-button>
  							  <button
  								class="button-show-more link underlined-link no-js-hidden"
  								id="Show-More-{{ forloop.index }}-{{ section.id }}"
  								type="button"
  							  >
  								<span class="label-show-more label-text">{{ 'products.facets.show_more' | t -}} {% render 'theme-icons', icon: 'plus' %}</span>
  								<span class="label-show-less label-text hidden">{{ 'products.facets.show_less' | t -}} {% render 'theme-icons', icon: 'minus' %}</span>
  							  </button>
  							</show-more-button>
  						  {%- endif %}
    					</div>
                        {%- endunless -%}
                      </div>
                    </details>
                  {% when 'price_range' %}
                    <details
                      id="Details-{{ forloop.index }}-{{ section.id }}"
                      class="{% if filter_type == 'horizontal' %}disclosure-has-popup facets__disclosure{% else %}facets__disclosure-vertical color-gray{% endif %} js-filter"
                      data-index="{{ forloop.index }}"
                      {% if filter_type == 'vertical' and forloop.index == 1 %}
                        open
                      {% endif %}
                    >
                      <summary class="facets__summary bold caption-large focus-offset">
                        <div>
                          <span>{{ filter.label | escape }}</span>
                          {% render 'theme-icons', icon: 'plus' %}
                          {% render 'theme-icons', icon: 'minus' %}
                        </div>
                      </summary>
                      <div
                        id="Facet-{{ forloop.index }}-{{ section.id }}"
                        class="{% if filter_type == 'horizontal' %}facets__display{% else %}facets__display-vertical{% endif %}"
                      >
                      {% if filter_type == 'horizontal' %}
                        <div class="tooltip--icon">
                          {% render 'theme-icons', icon: 'tooltip' %}
                        </div>
                      {% endif %}
                      
                      {%- liquid 
                        assign filter_min_value = filter.min_value.value | default: 0.0 | divided_by: 100.0
                        assign filter_max_value = filter.max_value.value | default: filter.range_max | divided_by: 100.0
                        assign filter_range_max = filter.range_max | divided_by: 100.0 | ceil
                        assign filter_min_progress = filter_min_value | divided_by: filter_range_max | times: 100.0
                        assign filter_max_progress = filter_max_value | divided_by: filter_range_max | times: 100.0 
                      -%}
                        <price-range class="facets__price" style="--filter-range-min: {{ filter_min_progress }}%; --filter-range-max: {{ filter_max_progress }}%">
                          <div class="range-group__slider">
                            <div class="range-group__slider-label">
                              <label class="minimimum-filter__price" for="Filter-{{ filter.label | escape }}-GTE">
                                {% if filter.min_value.value %}
                                  {{ filter.min_value.value | money }}
                                {% else %}
                                  {{ 0 | money }}
                                {% endif %}
                              </label>
                              <label class="maximum-filter__price" for="Filter-{{ filter.label | escape }}-LTE">
                                {% if filter.max_value.value %}
                                  {{ filter.max_value.value | money }}
                                {% else %}
                                  {{ filter.range_max | money }}
                                {% endif %}
                              </label>
                            </div>
                            <div class="range-group__slider-input">
                              <input 
                                class="field__input-price"
                                type="range" 
                                data-type="low"
                                id="Filter-{{ filter.label | escape }}-GTE"
                                name="{{ filter.min_value.param_name }}" 
                                aria-label="{{- 'products.facets.from' | t -}}"
                                min="0" 
                                max="{{ filter_range_max | ceil }}"
                                step="1"
                                value="{{ filter_min_value | ceil }}"
                              >
                              <input 
                                class="field__input-price max"
                                type="range" 
                                data-type="high"
                                id="Filter-{{ filter.label | escape }}-LTE"
                                name="{{ filter.max_value.param_name }}" 
                                aria-label="{{- 'products.facets.to' | t -}}"
                                value="{{ filter_max_value | ceil }}"
                                step="1"
                                min="0"
                                max="{{ filter_range_max | ceil }}"
                              >
                            </div>
                          </div>
                        </price-range>
                      </div>
                    </details>
                {% endcase %}
              {%- endfor -%}
            </div>
  		  {% if filter_type == 'horizontal' %}
              </div>
            {% endif %}
            {% comment %} Pills after filtes on filter type horizontal {% endcomment %}
            {%- if filter_type == 'horizontal' -%}
              <div class="active-facets active-facets-desktop {% unless activeFilter %}hide{% endunless %}">
                {%- for filter in results.filters -%}
                  {%- for value in filter.active_values -%}
                    <facet-remove>
                      <a href="{{ value.url_to_remove }}" class="active-facets__button active-facets__button--light">
                        <span class="active-facets__button-inner btn">
                          {{ value.label | escape }}
                          {% render 'theme-icons', icon: 'close' %}
                          <span class="visually-hidden">{{ 'products.facets.clear_filter' | t }}</span>
                        </span>
                      </a>
                    </facet-remove>
                  {%- endfor -%}
                  {% if filter.type == 'price_range' %}
                    {%- if filter.min_value.value != null or filter.max_value.value != null -%}
                      <facet-remove>
                        <a href="{{ filter.url_to_remove }}" class="active-facets__button active-facets__button--light">
                          <span class="active-facets__button-inner btn">
                            {%- if filter.min_value.value -%}
                              {{ filter.min_value.value | money }}
                            {%- else -%}
                              {{ 0 | money }}
                            {%- endif -%}
                            -
                            {%- if filter.max_value.value -%}
                              {{ filter.max_value.value | money }}
                            {%- else -%}
                              {{ filter.range_max | money }}
                            {%- endif -%}
                            {% render 'theme-icons', icon: 'close' %}
                            <span class="visually-hidden">{{ 'products.facets.clear_filter' | t }}</span>
                          </span>
                        </a>
                      </facet-remove>
                    {%- endif -%}
                  {% endif %}
                {%- endfor -%}
                <facet-remove class="active-facets__button-wrapper">
                  <a href="{{ results_url }}" class="active-facets__button-remove link--underline bold">
                    <span>{{ 'products.facets.clear_all' | t }}</span>
                  </a>
                </facet-remove>
              </div>
            {%- endif -%}
  		  {%- endif -%}
          {% endif %}
  
          {% if results.current_vendor or results.current_type %}
            <input type="hidden" name="q" value="{{ results.current_vendor }}{{ results.current_type }}">
          {% endif %}        
        </form>
      </facet-filters-form>
    {%- endif -%}
    {% comment %}  Drawer and mobile filter {% endcomment %}
    <menu-drawer
      class="mobile-facets__wrapper{% if filter_type == 'horizontal' or filter_type == 'vertical' %} medium-hide large-up-hide{% endif %}"
      data-breakpoint="mobile"
    >
      <details class="mobile-facets__disclosure disclosure-has-popup">
        <summary class="mobile-facets__open-wrapper focus-offset">
          <span class="mobile-facets__open{% if filter_type == 'popup' and enable_filtering == false %} medium-hide large-up-hide{% endif %}">
            <span class="filter-open__btn">{% render 'theme-icons', icon: 'filter-slider' %}</span>
            <span class="mobile-facets__open-label button-label medium-hide large-up-hide bold">
              {%- if enable_filtering and enable_sorting -%}
                {{ 'products.facets.filter_and_sort' | t }}
              {%- elsif enable_filtering -%}
                {{ 'products.facets.filter_button' | t }}
              {%- elsif enable_sorting -%}
                {{ 'products.facets.sort_button' | t }}
              {%- endif -%}
            </span>
            <span class="mobile-facets__open-label button-label small-hide bold">
              {%- if enable_filtering -%}
                {{ 'products.facets.filter_button' | t }}
              {%- endif -%}
            </span>
          </span>
        </summary>
        <facet-filters-form>
          <div class="rt-theme-popup color-secondary hide-popup facets-popup__filter" data-popup-type="filter-popup">
            <div class="popup--inner" role="dialog" aria-modal="true">
              <form id="FacetFiltersFormMobile" class="popup-mobile-facets">
                <div class="popup-facets__inner">
                  <div class="mobile-facets__header small-hide medium-hide">
                    <div class="mobile-facets__header-inner">
                      <div class="filter-left__result">
                        {% render 'theme-icons', icon: 'filter-slider' %}
                        <p class="mobile-facets__count">
                          {%- if results.results_count -%}
                            {{ 'templates.search.results_with_count' | t: terms: results.terms, count: results.results_count }}
                          {%- elsif results.products_count == results.all_products_count -%}
                            {{ 'products.facets.product_count_simple' | t: count: results.products_count }}
                          {%- else -%}
                            {{
                              'products.facets.product_count'
                              | t: product_count: results.products_count, count: results.all_products_count
                            }}
                          {%- endif -%}
                        </p>
                      </div>
                      <div class="facet-filters sorting caption">
                        <div class="facet-filters__field">
                          <p class="facet-filters__label bold">
                            <label for="SortBy">{{ 'products.facets.sort_by_label' | t }}</label>
                          </p>
                          <div class="filter--select">
                            {%- assign sort_by = results.sort_by | default: results.default_sort_by -%}
                            <select
                              class="option--select"
                              id="SortByMobile"
                              aria-describedby="a11y-refresh-page-message"
                            >
                              {%- for option in results.sort_options -%}
                                <option
                                  value="{{ option.value | escape }}"
                                  {% if option.value == sort_by %}
                                    selected="selected"
                                  {% endif %}
                                >
                                  {{ option.name | escape }}
                                </option>
                              {%- endfor -%}
                            </select>
                            {% render 'theme-icons', icon: 'chevron-down' %}
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="mobile-facets__main has-submenu gradient">
                    {%- if enable_filtering -%}
                      {%- for filter in results.filters -%}
                        {% case filter.type %}
                          {% when 'boolean', 'list' %}
                          {% liquid
                            assign checkColorFilter = false 
                            assign filterLabel = filter.label | downcase
                            if filterLabel == 'color' or filterLabel == 'colour'
                              assign checkColorFilter = true
                            endif
                            assign total_active_values = total_active_values | plus: filter.active_values.size

                               assign presentation = filter.presentation | default: 'text'
                    if presentation == 'image'
                      assign visual_layout_class = 'facets-layout facets-layout-grid facets-layout-grid--' | append: presentation
                    else
                      assign visual_layout_class = 'facets-layout facets-layout-list facets-layout-list--' | append: presentation
                    endif
                  %}
                          
                            <details
                              id="Details-Mobile-{{ forloop.index }}-{{ section.id }}"
                              class="mobile-facets__details js-filter color-gray{% if filter.param_name == 'filter.v.availability' %} fixed-area__details availablity{% endif %}"
                              data-index="desktop-{{ forloop.index }}"
                            >
                              <summary class="mobile-facets__summary focus-inset bold{% if filter.param_name == 'filter.v.availability' %} filter__availability{% endif %}">
                              {%- unless filter.param_name == 'filter.v.availability' -%}
                                <div>
                                  <span>
                                    {{- filter.label | escape }}
                                  </span>
                                  {% render 'theme-icons', icon: 'plus' %}
                                  {% render 'theme-icons', icon: 'minus' %}
                                  {% render 'theme-icons', icon: 'chevron-right' %}
                                </div>
                              {% else %}
                                {%- for value in filter.values -%}
                                  {% assign valueLabel = value.label | handle %}
                                  <div class="filter-availability-item{% if value.count == 0 and value.active == false %} availablity-disabled{% endif %}">
                                    <span>{% if valueLabel == 'in-stock' %}{{- 'products.facets.availability_label' | t -}}{% else %}{{ value.label | escape }}{% endif %}</span>
                                    <label
                                      for="Filter-{{ filter.param_name | escape }}-mobile-{{ forloop.index }}"
                                      class="facet-checkbox availability"
                                    >
                                      <input
                                        type="checkbox"
                                        name="{{ filter.param_name }}"
                                        value="{{ value.value }}"
                                        id="Filter-{{ filter.param_name | escape }}-mobile-{{ forloop.index }}"
                                        {% if value.active %}
                                          checked
                                        {% endif %}
                                        {% if value.count == 0 and value.active == false %}
                                          disabled
                                        {% endif %}
                                      >
                                      {% render 'theme-icons', icon: 'check' %}
                                    </label>
                                  </div>
                                {% endfor %}
                              {% endunless %}
                              </summary>
                              <div
                                id="FacetMobile-{{ forloop.index }}-{{ section.id }}"
                                class="mobile-facets__submenu gradient"
                              >
                                {%- unless filter.param_name == 'filter.v.availability' -%}
                                  <ul class="mobile-facets__list list-unstyled{% if presentation == 'swatch' or color_swatch and checkColorFilter %} filter--color-swatch{% endif %}  {% if presentation != 'image' %}option_metadata{% endif %} " role="list">
                                    {%- for value in filter.values -%}
                                      <li class="{% if color_swatch and checkColorFilter %}mobile-facets__color{% else %}mobile-facets__item list-menu__item{% endif %}">
                                        {% if presentation == 'swatch' or color_swatch and checkColorFilter %}
                                          {% liquid
                                            assign colorHexCode = ''
                                            assign colorValueDowncase = value.value | handleize
                                            assign swatchConfig = settings.custom_color_swatch | newline_to_br | split: '<br />'
                                            for colorItem in swatchConfig
                                              assign splitItem = colorItem | split: ':'
                                              assign colorName = splitItem.first | handleize
                                              if colorValueDowncase == colorName
                                                assign colorValue = splitItem.last | strip
                                                if colorValue contains '#'
                                                  assign colorHexCode = colorValue
                                                endif
                                                break
                                              endif
                                            endfor
                                            assign color_file_name = value.value | handle | append: '.png'
                                            assign color_image = color_file_name | file_img_url: '50x50' | prepend: 'https:' | split: '?' | first

                                              assign swatch_image = ''
                                              assign swatch_color = ''
                                              
                                              if value.swatch.image
                                                assign image_url = value.swatch.image | image_url: width: 50
                                                assign swatch_image = 'url(' | append: image_url | append: ')'
                                              endif
                                              if value.swatch.color
                                                assign swatch_color = 'rgb(' | append: value.swatch.color.rgb | append: ')'
                                              endif
                                          -%}
                                    
                                          <input type="checkbox" name="{{ value.param_name }}" value="{{ value.value }}" id="Filter-{{ filter.param_name | escape }}-mobile-{{ forloop.index }}"{% if value.active %} checked{% endif %}{% if value.count == 0 and value.active == false %} disabled{% endif %}>
                                          <label for="Filter-{{ filter.param_name | escape }}-mobile-{{ forloop.index }}" class="facet-checkbox color__swatches{% if value.count == 0 and value.active == false %} facet-checkbox--disabled{% endif %}"
                                             style="background-color:{% if colorHexCode != '' %}{{ colorHexCode }}{% else %}{{ colorValueDowncase | downcase }}{% endif %}; background-color:{% if swatch_color != blank %}{{ swatch_color }}{% else %}{{ colorName }}{% endif %}; background-image:{% if swatch_image != blank %}{{ swatch_image }}{% elsif images[color_file_name] != blank %}url({{ color_image }});{% endif %}">
                                            <span class="hide" aria-hidden="true">{{ value.label | escape }} ({{ value.count }})</span>
                                          </label>
                                        {% else %}
                                          <label
                                            for="Filter-{{ filter.param_name | escape }}-mobile-{{ forloop.index }}"
                                            class="mobile-facets__label facet-checkbox{% if value.count == 0 and value.active == false %} mobile-facets__label--disabled{% endif %}"
                                          >
                                            <input
                                              class="mobile-facets__checkbox"
                                              type="checkbox"
                                              name="{{ value.param_name }}"
                                              value="{{ value.value }}"
                                              id="Filter-{{ filter.param_name | escape }}-mobile-{{ forloop.index }}"
                                              {% if value.active %}
                                                checked
                                              {% endif %}
                                              {% if value.count == 0 and value.active == false %}
                                                disabled
                                              {% endif %}
                                            >
                                              {% if presentation == 'image' %}
                                           <div class="facets__visual-display-wrapper">
                                            {% render 'visual-display',
                                            type: value.display.type,
                                            value: value.display.value,
                                            presentation: filter.presentation
                                            %}
                                            </div>{% endif %}
                                            {% render 'theme-icons', icon: 'check' %}
                                            <span aria-hidden="true">{{ value.label | escape }} ({{ value.count }})</span>
                                            <span class="visually-hidden">
                                              {{- value.label | escape }} (
                                              {%- if value.count == '1' -%}
                                                {{- 'products.facets.product_count_simple.one' | t: count: value.count -}}
                                              {%- else -%}
                                                {{- 'products.facets.product_count_simple.other' | t: count: value.count -}}
                                              {%- endif -%}
                                              )</span
                                            >
                                          </label>
                                        {% endif %}
                                      </li>
                                    {%- endfor -%}
                                  </ul>
                                {%- endunless -%}
                              </div>
                            </details>
                          {% when 'price_range' %}
                            <details
                              id="Details-Mobile-{{ forloop.index }}-{{ section.id }}"
                              class="mobile-facets__details js-filter color-gray fixed-area__details price__range"
                              data-index="mobile-{{ forloop.index }}"
                            >
                              <summary class="mobile-facets__summary focus-inset bold">
                                <div>
                                  <span>{{ filter.label | escape }}</span>
                                  <span class="mobile-facets__arrow no-js-hidden">
                                    {% render 'theme-icons', icon: 'plus' %}
                                    {% render 'theme-icons', icon: 'minus' %}
                                  </span>
                                </div>
                              </summary>
                              <div
                                id="FacetMobile-{{ forloop.index }}-{{ section.id }}"
                                class="mobile-facets__submenu gradient"
                              >
      
                                {%- liquid 
                                  assign filter_min_value = filter.min_value.value | default: 0.0 | divided_by: 100.0
                                  assign filter_max_value = filter.max_value.value | default: filter.range_max | divided_by: 100.0
                                  assign filter_range_max = filter.range_max | divided_by: 100.0 | ceil
                                  assign filter_min_progress = filter_min_value | divided_by: filter_range_max | times: 100.0
                                  assign filter_max_progress = filter_max_value | divided_by: filter_range_max | times: 100.0 
                                -%}
                                  <price-range class="facets__price" style="--filter-range-min: {{ filter_min_progress }}%; --filter-range-max: {{ filter_max_progress }}%">
                                    <div class="range-group__slider">
                                      <div class="range-group__slider-label">
                                        <label class="minimimum-filter__price" for="Mobile-Filter-{{ filter.label | escape }}-GTE">
                                          {% if filter.min_value.value %}
                                            {{ filter.min_value.value | money }}
                                          {% else %}
                                            {{ 0 | money }}
                                          {% endif %}
                                        </label>
                                        <label class="maximum-filter__price" for="Mobile-Filter-{{ filter.label | escape }}-LTE">
                                          {% if filter.max_value.value %}
                                            {{ filter.max_value.value | money }}
                                          {% else %}
                                            {{ filter.range_max | money }}
                                          {% endif %}
                                        </label>
                                      </div>
                                      <div class="range-group__slider-input">
                                        <input 
                                          class="field__input-price"
                                          type="range" 
                                          data-type="low"
                                          id="Mobile-Filter-{{ filter.label | escape }}-GTE"
                                          name="{{ filter.min_value.param_name }}" 
                                          aria-label="{{- 'products.facets.from' | t -}}"
                                          min="0" 
                                          max="{{ filter_range_max | ceil }}"
                                          step="1"
                                          value="{{ filter_min_value | ceil }}"
                                        >
                                        <input 
                                          class="field__input-price max"
                                          type="range" 
                                          data-type="high"
                                          id="Mobile-Filter-{{ filter.label | escape }}-LTE"
                                          name="{{ filter.max_value.param_name }}" 
                                          aria-label="{{- 'products.facets.to' | t -}}"
                                          value="{{ filter_max_value | ceil }}"
                                          step="1"
                                          min="0"
                                          max="{{ filter_range_max | ceil }}"
                                        >
                                      </div>
                                    </div>
                                  </price-range>
                              </div>
                            </details>
                        {% endcase %}
                      {%- endfor -%}
                    {%- endif -%}
                    {%- if enable_sorting -%}
                    <details
                        id="Details-Mobile-sorting-{{ section.id }}"
                        class="mobile-facets__details js-filter color-gray large-up-hide fixed-area__details"
                        data-index="desktop-{{ forloop.index }}"
                      >
                        <summary class="mobile-facets__summary focus-inset bold">
                          <div>
                            <span>{{ 'products.facets.sort_by' | t }}</span>
                            <span class="mobile-facets__arrow no-js-hidden">
                              {% render 'theme-icons', icon: 'plus' %}
                              {% render 'theme-icons', icon: 'minus' %}
                            </span>
                          </div>
                        </summary>
                        <div
                          id="FacetMobile-sorting-{{ section.id }}"
                          class="mobile-facets__submenu"
                        >
                          <ul class="mobile-facets__list list-unstyled sort" role="list">
                            {%- for option in results.sort_options -%}
                              <li class="mobile-facets__item list-menu__item">
                                <label
                                  for="Filter-{{ option.value | escape }}-mobile-sorting"
                                  class="mobile-facets__label facet-checkbox"
                                >
                                  <input
                                    class="mobile-facets__checkbox"
                                    type="radio"
                                    name="sort_by"
                                    value="{{ option.value | escape }}"
                                    id="Filter-{{ option.value | escape }}-mobile-sorting"
                                    {% if option.value == sort_by %}
                                      checked
                                    {% endif %}
                                  >
                                  {% render 'theme-icons', icon: 'check' %}
                                  <span aria-hidden="true">{{ option.name | escape }}</span>
                                </label>
                              </li>
                            {%- endfor -%}
                          </ul>
                        </div>
                      </details>
                    {% endif %}
      
                    <div class="mobile-facets__footer large-up-hide">
                      <button
                        type="button"
                        class="no-js-hidden btn btn--primary popup-close__btn"
                      >
                        {{ 'products.facets.apply' | t }} {% render 'theme-icons', icon: 'arrow-up-right' %}
                      </button>
                      <noscript
                        ><button class="btn btn--primary">{{ 'products.facets.apply' | t }}</button></noscript
                      >
                    </div>
                  </div>
                  <div class="filter-right__open small-hide medium-hide"> </div>
                  {% if results.current_vendor or results.current_type %}
                    <input type="hidden" name="q" value="{{ results.current_vendor }}{{ results.current_type }}">
                  {% endif %}
      
                  {%- if results.terms -%}
                    <input type="hidden" name="q" value="{{ results.terms | escape }}">
                    <input name="options[prefix]" type="hidden" value="last">
                  {%- endif -%}
                </div>
              </form>
            </div>
            <button class="theme-popup-close color-secondary">{% render 'theme-icons', icon: 'close' %}</button>
          </div>
          
        </facet-filters-form>
      </details>
      <div class="product-count" role="status">
        <p class="product-count__text">
          <span id="ProductCount">
            {%- if results.results_count -%}
              {{ 'templates.search.results_with_count' | t: terms: results.terms, count: results.results_count }}
            {%- elsif results.products_count == results.all_products_count -%}
              {{ 'products.facets.product_count_simple' | t: count: results.products_count }}
            {%- else -%}
              {{
                'products.facets.product_count'
                | t: product_count: results.products_count, count: results.all_products_count
              }}
            {%- endif -%}
          </span>
        </p>
        <div class="loading-overlay__spinner">
          {% render 'theme-icons', icon: 'loader' %}
        </div>
      </div>
    </menu-drawer>
  
    <div class="active-facets active-facets-mobile medium-hide large-up-hide hide">
      {%- for filter in results.filters -%}
        {%- for value in filter.active_values -%}
          <facet-remove>
            <a href="{{ value.url_to_remove }}" class="active-facets__button active-facets__button--light">
              <span class="active-facets__button-inner btn">
                {{ value.label | escape }}
                {% render 'theme-icons', icon: 'close' %}
                <span class="visually-hidden">{{ 'products.facets.clear_filter' | t }}</span>
              </span>
            </a>
          </facet-remove>
        {%- endfor -%}
  
        {%- if filter.type == 'price_range' -%}
          {%- if filter.min_value.value != null or filter.max_value.value != null -%}
            <facet-remove>
              <a href="{{ filter.url_to_remove }}" class="active-facets__button active-facets__button--light">
                <span class="active-facets__button-inner btn">
                  {%- if filter.min_value.value -%}
                    {{ filter.min_value.value | money }}
                  {%- else -%}
                    {{ 0 | money }}
                  {%- endif -%}
                  -
                  {%- if filter.max_value.value -%}
                    {{ filter.max_value.value | money }}
                  {%- else -%}
                    {{ filter.range_max | money }}
                  {%- endif -%}
                  {% render 'theme-icons', icon: 'close' %}
                  <span class="visually-hidden">{{ 'products.facets.clear_filter' | t }}</span>
                </span>
              </a>
            </facet-remove>
          {%- endif -%}
        {%- endif -%}
      {%- endfor -%}
      <facet-remove class="active-facets__button-wrapper">
        <a href="{{ results_url }}" class="active-facets__button-remove link--underline bold">
          <span>{{ 'products.facets.clear_all' | t }}</span>
        </a>
      </facet-remove>
    </div>
    {% comment %} Sort, product count and filter pills at the end when filter is type of Drawer for the correct tabbing order {% endcomment %}
    {%- if enable_sorting and filter_type == 'popup' -%}
      <facet-filters-form class="facets small-hide">
        <form id="FacetSortDrawerForm" class="facets__form">
          <div class="facet-filters sorting caption small-hide">
            <div class="facet-filters__field">
              <h2 class="facet-filters__label caption-large text-body bold">
                <label for="SortBy">{{ 'products.facets.sort_by_label' | t }}</label>
              </h2>
              <div class="filter--select">
                {%- assign sort_by = results.sort_by | default: results.default_sort_by -%}
                <select
                  name="sort_by"
                  class="facet-filters__sort option--select  select__select caption-large"
                  id="SortBy"
                  aria-describedby="a11y-refresh-page-message"
                >
                  {%- for option in results.sort_options -%}
                    <option
                      value="{{ option.value | escape }}"
                      {% if option.value == sort_by %}
                        selected="selected"
                      {% endif %}
                    >
                      {{ option.name | escape }}
                    </option>
                  {%- endfor -%}
                </select>
                {%- render 'theme-icons', icon: 'chevron-down' -%}
              </div>
            </div>
  
            <noscript>
              <button type="submit" class="facets__button-no-js button button--secondary">
                {{ 'products.facets.sort_button' | t }}
              </button>
            </noscript>
          </div>
  
          {% if results.current_vendor or results.current_type %}
            <input type="hidden" name="q" value="{{ results.current_vendor }}{{ results.current_type }}">
          {% endif %}
  
          {%- if results.terms -%}
            <input type="hidden" name="q" value="{{ results.terms | escape }}">
            <input name="options[prefix]" type="hidden" value="last">
          {%- endif -%}
        </form>
      </facet-filters-form>
    {%- endif -%}
    
    {%- if filter_type == 'popup' -%}
      <facet-filters-form class="facets facets-pill small-hide">
        <form id="FacetFiltersPillsForm" class="facets__form">
          <div class="active-facets active-facets-desktop {% unless activeFilter %}hide{% endunless %}">
            {%- for filter in results.filters -%}
              {%- for value in filter.active_values -%}
                <facet-remove>
                  <a href="{{ value.url_to_remove }}" class="active-facets__button active-facets__button--light">
                    <span class="active-facets__button-inner btn">
                      {{ value.label | escape }}
                      {% render 'theme-icons', icon: 'close' %}
                      <span class="visually-hidden">{{ 'products.facets.clear_filter' | t }}</span>
                    </span>
                  </a>
                </facet-remove>
              {%- endfor -%}
  
              {%- if filter.type == 'price_range' -%}
                {%- if filter.min_value.value != null or filter.max_value.value != null -%}
                  <facet-remove>
                    <a href="{{ filter.url_to_remove }}" class="active-facets__button active-facets__button--light">
                      <span class="active-facets__button-inner btn">
                        {%- if filter.min_value.value -%}
                          {{ filter.min_value.value | money }}
                        {%- else -%}
                          {{ 0 | money }}
                        {%- endif -%}
                        -
                        {%- if filter.max_value.value -%}
                          {{ filter.max_value.value | money }}
                        {%- else -%}
                          {{ filter.range_max | money }}
                        {%- endif -%}
                        {% render 'theme-icons', icon: 'close' %}
                        <span class="visually-hidden">{{ 'products.facets.clear_filter' | t }}</span>
                      </span>
                    </a>
                  </facet-remove>
                {%- endif -%}
              {%- endif -%}
            {%- endfor -%}
            <facet-remove class="active-facets__button-wrapper">
              <a href="{{ results_url }}" class="active-facets__button-remove link--underline bold">
                <span>{{ 'products.facets.clear_all' | t }}</span>
              </a>
            </facet-remove>
          </div>
        </form>
      </facet-filters-form>
    {%- endif -%}
  </div>
