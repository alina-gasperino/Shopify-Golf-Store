{% comment %}
  Renders share button.
  Accepts:
  - block: {Object} passes in the block information.
  - share_link: {String} url to be added to the input the user will get/copy.

  Usage:
  {% render 'share-button',
    block: block,
    share_link: share_url
  %}
{% endcomment %}
<script src="{{ 'share.js' | asset_url }}" defer="defer"></script>

<share-button id="Share-{{ section.id }}" class="share-button quick-add-hidden" {{ block.shopify_attributes }}>
  {% if label %}
    <label class="share--label form__label">{{ 'general.share.share_url' | t }}</label>
  {% endif %}
  <button class="share-button__button share-link--underline hidden justify--{{ text_alignment }}" aria-label="share">
    {% render 'theme-icons', icon: 'share' %}
    {{ block.settings.share_label | escape }}
  </button>
  <details id="Details-{{ block.id }}-{{ section.id }}">
    <summary class="share-button__button share-button__button justify--{{ text_alignment }}" share-link--underline">
      {% render 'theme-icons', icon: 'share' %}
      {{ block.settings.share_label | escape }}
    </summary>
    <div class="share-button__fallback motion-reduce">
      <div class="field">
        <label class="field__label hide" for="ShareUrl-{{ section.id }}">{{ 'general.share.share_url' | t }}</label>
        <legend id="ShareMessage-{{ section.id }}" class="share-button__message hidden theme--success-message" role="status"> </legend>
        <input
          type="text"
          class="field__input"
          id="ShareUrl-{{ section.id }}{{ block.id }}"
          value="{{ share_link }}"
          placeholder="{{ 'general.share.share_url' | t }}"
          onclick="this.select();"
          readonly
        >
      </div>
      <button class="share-button__close hidden no-js-hidden">
        {% render 'theme-icons', icon: 'close' %}
        <span class="visually-hidden">{{ 'general.share.close' | t }}</span>
      </button>
      <button class="share-button__copy no-js-hidden">
        {% render 'theme-icons', icon: 'clipboard' %}
        <span class="visually-hidden">{{ 'general.share.copy_to_clipboard' | t }}</span>
      </button>
    </div>
  </details>
</share-button>
